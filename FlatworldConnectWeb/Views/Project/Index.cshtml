@model IEnumerable<Project>
@{
    ViewData["Title"] = "Index";
}
<br/>
<div class="text-end">
    <a asp-controller="Project" asp-action="Create" class="btn btn-secondary" style="width:150px">
        <i class="bi bi-plus-circle"></i> &nbsp; Create New Product
    </a>
   
</div>
<br/>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Search: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>

        <tr>
            <th>
                Project Name
            </th>
            <th>
                Description
            </th>
            <th>
                Customer Id
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Manager Id
            </th>
            <th>
                &nbsp;
            </th>
            <th>
                &nbsp;
            </th>
            <th>
                &nbsp;
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="35%">
                    @obj.Name
                </td>
                <td width="35%">
                    @obj.Description
                </td>
                <td width="35%">
                    @obj.CustomerId
                </td>
                <td width="35%">
                    @obj.StartDate
                </td>
                <td width="35%">
                    @obj.EndDate
                </td>
                <td width="35%">
                    @obj.ManagerId
                </td>
                <td width="15%">
                    <a asp-controller="Project" asp-action="Edit" class="btn btn-secondary" asp-route-id="@obj.Id" style="width:150px">
                        Edit
                    </a>
                </td>
                <td width="15%">
                    <a asp-controller="Project" asp-action="Details" class="btn btn-secondary" style="width:150px" asp-route-id="@obj.Id">
                        Details
                    </a>
                </td>
                <td width="15%">
                    <a asp-controller="Project" asp-action="Delete" class="btn btn-secondary" style="width:150px" asp-route-id="@obj.Id">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>





</table>