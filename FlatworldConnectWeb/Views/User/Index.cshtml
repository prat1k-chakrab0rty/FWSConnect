@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Index";
}
<div class="text-end">
    <br/>
    <a asp-controller="User" asp-action="Create" class="btn btn-secondary" style="width:150px">
        <i class="bi bi-plus-circle"></i> Create a new Manager
    </a>
    <br/>
</div>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Search: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-controller="User" asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>
<table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Customer Name
                </th>
                <th>
                    Email
                </th>
            <th>
                &nbsp;
            </th>
            <th>
                &nbsp;
            </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="35%">
                        @obj.Name
                    </td>
                <td width="35%">
                       @obj.Email

                </td>
                <td width="15%">
                    <a asp-controller="User" asp-action="Edit" class="btn btn-secondary" asp-route-id="@obj.Id" style="width:150px">
                        Edit
                    </a>
                </td>
                <td width="15%">
                    <a asp-controller="User" asp-action="Delete" class="btn btn-secondary" style="width:150px" asp-route-id="@obj.Id">
                        Delete
                    </a>
                </td>
                </tr>
            }
        </tbody>



   </table>
   	
